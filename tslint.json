{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-no-unused-expression-chai"
  ],
  "rules": {
    "indent": [true, "spaces", 4],
    "interface-name": [true, "never-prefix"],
    // This rule is not needed, see below:
    // https://cdb.reacttraining.com/react-inline-functions-and-performance-bdff784f5578
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": [false],
    "jsx-wrap-multiline": true,
    "no-var-requires": false, // needed for CSS Modules; const styles = require('./style.css')
    "ordered-imports": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "variable-name": {
      "options": ["allow-leading-underscore", "ban-keywords", "check-format", "allow-pascal-case"]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-preblock"
    ]
  },
  "linterOptions": {
    "exclude": ["src/renderer/@types/**/*"]
  }
}
