.checkbox-container {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
    width: 100%;
}

.default-input, .default-input > * {
    border-radius: unset !important;
    box-shadow: none;
    height: 100%;
    margin: 0;
    width: 100%;
}

.duration-input {
    display: flex !important;
}

.duration-input > input {
    padding-left: 2px;
    padding-right: 2px;
}
