.container {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.table-title {
    margin: 0 0 0.5em 0;
}

.table-container {
    border-bottom: var(--border);
    border-top: var(--border);
    flex: 1;
    min-height: 45px;
}

.table-container > * {
    padding-bottom: 0;
}

.empty-container {
    display: flex;
    height: 100%;
}

.empty-container > *{
    margin: auto;
}
