.container {
    --bar-right-and-left-padding: 0.25em;

    background-color: var(--border-color);
    padding: 8vh var(--bar-right-and-left-padding) 0 var(--bar-right-and-left-padding);
    width: calc(60px + 2 * var(--bar-right-and-left-padding));
}

.button {
    align-items: center;
    background-color: var(--border-color);
    border: none;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    font-size: var(--notification-bar-font-size);
    height: 65px;
    margin: 0 0 2em 0;
    padding-top: 5px;
    width: 60px;

    & .button-icon {
        font-size: 30px;
    }

    & .button-title {
        line-height: 1.1em;
        white-space: normal;
    }
}

.button:hover {
    background-color: #1fb586;
    color: white;
}

.button:focus, .button:active, .selected-button {
    background-color: #1DA57A;
    color: white;
    cursor: default;
}
