.checkbox-container {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
    width: 100%;
}

.date-input {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2px;
}

.date-input > i {
    margin: 6px 6px 0 0;
}

.date-picker {
    width: 100%;
}

.date-plus-button {
    margin-left: 24px;
    width: 100%;
}

.default-input, .default-input > * {
    border-radius: unset !important;
    box-shadow: none;
    height: 100%;
    margin: 0;
    width: 100%;
}

.duration-input {
    display: flex !important;
}

.duration-input > span > span > input {
    padding-left: 2px;
    padding-right: 2px;
}

.duration-input > span > span > span {
    border-radius: unset;
    font-size: smaller;
    margin: 0;
    padding-left: 2px;
    padding-right: 2px;
}

.hidden {
    visibility: hidden;
}
