.error-icon {
  color: var(--error);
}

.icon {
  padding-top: 5px;
  padding-right: 8px;
}

.alert {
  margin-bottom: 1em;
  max-height: 10em;
  overflow-y: auto;
}

.content-container {
  /* Flex-parent of data table */
  display: flex;
  flex-direction: column;

  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  max-width: calc(100% - var(--navigation-bar-width));
  padding: 1em;
  user-select: auto;
  width: 100vw;
}

.drag-and-drop-box {
  display: flex;
  flex-direction: column;
}

.footer-button {
    margin-right: 15px;
    width: 200px;
}

.spin-container {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.help-text {
  color: lightgrey;
}

.separator-text {
  padding-top: 24px;
  margin: 0 10px;
}

.selector {
  width: 100%;
}


.new-content-container {
  display: block;
  max-width: calc(100% - var(--navigation-bar-width));
  overflow: scroll;
  position: relative;
  width: 100vw;
}