h1 {
  font-size: 22px;
  text-align: left;
  width: 100%;
}

.content {
  width: 100%;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 40px;
}

.footer-button {
    margin-right: 15px;
    width: 200px;
}

.page {
  display: block;
  margin-bottom: 100px;
  max-width: calc(100% - var(--navigation-bar-width));
  overflow: auto;
  position: relative;
  width: 100vw;
}
