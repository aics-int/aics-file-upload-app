.radio-button {
  align-items: center;
  display: flex;
  line-height: normal;
  height: auto;
  padding: 10px 18px 10px 18px;
  width: 50%;
}

.radio-button-content {
  align-items: center;
  display: flex;
  font-size: 18px;
  gap: 10px;
  height: auto;
  justify-content: flex-start;
}

.radio-button-icon {
  font-size: 1.2em;
}

.radio-button-help-text {
  font-size: 0.75em;
}

.radio-button-text {
}

.radio-group {
  display: flex;
  justify-content: center;
}
