.container, .content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.container {
  width: 100%;
  height: 100%;

  &.highlight {
    background-color: #e0eefc;
    color: var(--brand-primary);
  }

  & .content {
    width: 50%;

    & .upload-icon {
      font-size: 120px;
      color: var(--brand-primary);
      padding: 1rem;
    }

    & .button {
      width: 100%;
    }
  }
}

