.container, .content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.container {
  width: 100%;
  height: 100%;

  &.highlight {
    background-color: var(--drag-and-drop-background-color);
    color: var(--brand-primary);
  }

  & .content {
    width: 50%;

    & .upload-icon {
      font-size: 5em;
      color: var(--brand-primary);
      padding: 1rem;
    }
  }
}

