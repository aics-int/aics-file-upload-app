.container {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.child-container {
  display: unset;
  align-items: unset;
  justify-content: unset;
  flex-direction: unset;
}

.highlight {
  background-color: var(--drag-and-drop-background-color);
  color: var(--brand-primary);
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.container {
  width: 100%;
}

.container .overlay {
  pointer-events: none;
  opacity: 0.25;
  width: 100%;
  height: 100%;
}

.container .overlay-prompt {
  position: absolute;
  padding-left: 45px;
}
