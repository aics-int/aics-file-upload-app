.container {
  display: flex;
  align-items: center;
  &.read-only {
    &:hover {
      cursor: pointer;
    }

    & div {
      padding-left: 0.3em;
      flex: 1;
    }
  }

  & .input:global(.ant-input) {
    min-height: inherit;
    opacity: 1;
    flex: 1;
    border: none;

    &:focus, &:hover {
      border: none;
      box-shadow: none;
    }
  }
}
