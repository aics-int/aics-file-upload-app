.modal-content {
    display: flex;
}

.column-headers {
    display: flex;
    border-bottom: var(--border);
    background-color: #faf8f0;
    font-size: var(--small);
    text-transform: uppercase;
}

.label-header, .type-header, .order-column, .required-header {
    padding: 0.75em;
}

.label-header, .type-header {
    flex: 1;
}

.order-column {
    flex: 0 0 2em;
}

.required-header {
    flex: 0 0 auto;
}

.columns {
    flex:1;
    background-color: #f0eee6;
    border: var(--border);
}

.selected {
    background-color: lightblue;
}

.add-btn {
    flex: 0 0 auto;
}

.column-row-container {
    display: flex;
    align-items: center;
}

.column-row {
    flex: 1;

    &:not(:last-child) {
        border-bottom: var(--border);
    }
}

.buttons {
    flex: 0 0 auto;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
    height: 100%;
}
