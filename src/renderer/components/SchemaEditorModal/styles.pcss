.column-headers {
    display: flex;
    border-bottom: var(--border);
}

.label-header, .type-header {
    font-size: var(--small);
    flex: 1;
    text-transform: uppercase;
    background-color: #faf8f0;
    padding: 0.75em;
}

.columns {
    background-color: #f0eee6;
    border: var(--border);
}

.selected {
    background-color: lightblue;
}

.add-btn {
    flex: 0 0 auto;
}

.column-form {
    padding-top: 1em;
}

.column-row:not(:last-child) {
    border-bottom: var(--border);
}

.button-row {
    display: flex;
    justify-content: left;
}

.plus {
    margin-right: 0.5em;
}
