.column-headers {
    display: flex;
}

.label-header, .type-header {
    flex: 1;
}

.selected {
    background-color: lightblue;
}


.column-row {
    display: flex;
}

.column-name, .column-type {
    flex: 1;
    margin-right: 1em;
}

.add-btn {
    flex: 0 0 auto;
}

.column-form {
    padding-top: 1em;
}

.button-row {
    display: flex;
    justify-content: left;
}

.plus {
    margin-right: 0.5em;
}
