.column-form {
  background-color: white;
  display: flex;
  align-items: center;
  height: var(--column-definition-row-height);

  &:hover {
    cursor: pointer;
  }
}

.column-name, .column-type {
  flex: 1;
}

.required {
  flex: 0 0 100px;
  display: flex;
  justify-content: center;
}

.add-btn {
  flex: 0 0 auto;
}

.drag-icon {
  flex-basis: 1em;
}