.container {
    width: 100%;
}

.divider {
    margin: 4px 0;
}

.create-template {
    display: flex;
    width: 100%;
    align-items: center;
    padding: 0.5em 1em;
}

.create-template:hover {
    cursor: pointer;
    color: var(--brand-primary);
}

.create-template .icon {
    flex: 0 0 auto;
}

.create-template .text {
    flex: 1;
    margin-left: 1em;
}

.form {
    margin-bottom: 0;
}
